{
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "es5",
    "bracketSameLine": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "singleAttributePerLine": true,
    "proseWrap": "always",
    "endOfLine": "auto",
    "htmlWhitespaceSensitivity": "css",
    "embeddedLanguageFormatting": "auto",
    "importOrder": [
        "^(react/(.*)$)|^(react$)",
        "^(next/(.*)$)|^(next$)",
        "<THIRD_PARTY_MODULES>",
        "^@/app/(.*)$",
        "^@/components/(layout|ui)/(.*)$",
        "^@/constants/(.*)$",
        "^@/data/(.*)$",
        "^@/hooks/(.*)$",
        "^@/lib/(api|utils)/(.*)$",
        "^@/utils/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
        "typescript",
        "jsx",
        "decorators-legacy"
    ],
    "tailwindFunctions": [
        "clsx",
        "cn",
        "cva",
        "tw"
    ],
    "tailwindAttributes": [
        "className",
        "tw",
        "clsx"
    ],
    "plugins": [
        "@ianvs/prettier-plugin-sort-imports",
        "prettier-plugin-tailwindcss"
    ]
}